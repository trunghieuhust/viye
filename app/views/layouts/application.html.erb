<!DOCTYPE html>
<html>
<head>
	<title>TestViye</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>

</head>
<body>
	<div id="MY-HEADER">
		<div id="MY-LOGO">
			<li><a class="header-logo" href=<%=home_index_path%> >ベトナム旅行</a></li>
			<li><span>Vietnam in your eye</span></li>
		</div>	
		<div id="MY-SEARCH">
			<input type="text" placeholder="hãy gõ từ khóa vào đây!">
			<button type="button" class="search-button">Tìm kiếm</button>
		</div>

		<div id="MY-LOGIN">
			<div id="user_nav">
				<% if user_signed_in? %>
				<div class="wrap-ava">
					<a class="one" href="#">
						<span class="glyphicon glyphicon-user"></span>
						<!-- <img class="my-ava" src="images/user.png" width="30px" height="30px"> -->
						<span class="my-username"><%= current_user.name %></span>
					</a>
					<div class="my-tooltip" title="Account-setting" rel="tooltip-bottom"><a href="<%= edit_user_registration_path%>"><span class="glyphicon glyphicon-cog"></span></a></div>
					<div class="my-tooltip" title="Logout" rel="tooltip-bottom"><a href="<%= destroy_user_session_path %>"><span class="glyphicon glyphicon-log-out"></span></a></div>

				</div>
				<% else %>



				<!-- day la phan dang ki -->				
				<div class="popover-markup">
					<button type="button" class="pop-btn search-button">Đăng ký</button>
					<div id="popover-signup-content" class="popover-content hide">
						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class=>"form-horizontal") do |f| %>
						<%= devise_error_messages! %>
						<div class="control-group">
							<label class="control-label" for="text">Name</label>
							<div class="controls">
								<%= f.text_field :name, :autofocus => true, :class=>"my-text-form", :placeholder=>"Ten hien thi" %>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label" for="inputEmail">Email</label>
							<div class="controls">
								<%= f.email_field :email, :class=>"my-text-form", :placeholder=>"Example@gmail.com" %>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label" for="inputPassword">Password</label>
							<div class="controls">
								<%= f.password_field :password , :class=>"my-text-form", :placeholder=>"Mật khẩu"%>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label" for="inputPassword">Password</label>
							<div class="controls">
								<%= f.password_field :password_confirmation , :class=>"my-text-form", :placeholder=>"Mật khẩu"%>
							</div>
						</div>
						<div class="control-group">
							<div><%= f.submit "Sign up" , :class=>"login-button" %></div>
						</div>
						<% end %>		
					</div>
				</div>
				<!-- het phan dang ki -->						


				<!-- day la phan dang nhap -->
				<div class="popover-markup">
					<button type="button" class="pop-btn search-button">Đăng nhập</button>
					<div id="popover-login-content" class="popover-content hide">

						<%= form_for("user", :url => user_session_path, :class=>"form-horizontal") do |f| %>
						<div class="control-group">
							<label class="control-label" for="inputEmail">Email</label>
							<div class="controls">
								<%= f.text_field :email , :class=>"my-text-form", :placeholder=>"Email"%>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label" for="inputPassword">Password</label>
							<div class="controls">
								<%= f.password_field :password , :class=>"my-text-form", :placeholder=>"Mật khẩu" %>
							</div>
						</div>
						<br>
						<%= f.check_box :remember_me %>
						<%= f.label :remember_me %>
						<%= f.submit 'Sign in', :class=>"login-button" %>
						<% end %>
						<% end %>
					</div>
				</div>
				
				<!-- het phan dang nhap -->
			</div>
		</div>
	</div>

	<%= yield %>






	<div id="MY-FOOTER">
		<div class="wrap-footer">
			<div class="col-1">
				<ul class="ft-list">
					<li class="ft-title"><a href="#">Miền Bắc</a></li>
					<li class="my-li"><a href="#">Hà Nội</a></li>
					<li class="my-li"><a href="#">Điện Biên</a></li>
					<li class="my-li"><a href="#">Tây Bắc</a></li>
					<li class="my-li"><a href="#">Ba Vì</a></li>
					<li class="my-li"><a href="#">Lai Châu</a></li>
					<li class="my-li"><a href="#">Cao Bằng</a></li>
					<li class="my-li"><a href="#"><span>Xem thêm...</span></a></li>
				</ul>
			</div>
			<div class="col-2">
				<ul class="ft-list">
					<li class="ft-title"><a href="#">Miền Trung</a></li>
					<li class="my-li"><a href="#">Hà Nội</a></li>
					<li class="my-li"><a href="#">Điện Biên</a></li>
					<li class="my-li"><a href="#">Tây Bắc</a></li>
					<li class="my-li"><a href="#">Ba Vì</a></li>
					<li class="my-li"><a href="#">Lai Châu</a></li>
					<li class="my-li"><a href="#">Cao Bằng</a></li>
					<li class="my-li"><a href="#"><span>Xem thêm...</span></a></li>
				</ul>
			</div>
			<div class="col-3">
				<ul class="ft-list">
					<li class="ft-title"><a href="#">Miền Nam</a></li>
					<li class="my-li"><a href="#">Hà Nội</a></li>
					<li class="my-li"><a href="#">Điện Biên</a></li>
					<li class="my-li"><a href="#">Tây Bắc</a></li>
					<li class="my-li"><a href="#">Ba Vì</a></li>
					<li class="my-li"><a href="#">Lai Châu</a></li>
					<li class="my-li"><a href="#">Cao Bằng</a></li>
					<li class="my-li"><a href="#"><span>Xem thêm...</span></a></li>
				</ul>
			</div>
			<div class="col-4">
				<ul class="ft-list">
					<li class="ft-title">Thống kê Website</li>
					<li class="my-li">Số thành viên:<span>12345</span></li>
					<li class="my-li">Số bài post của thành viên:<span>123456</span></li>
					<li class="my-li">Số bài post của admin:<span>123</span></li>
					<li class="my-li">Số lượng review:<span>696969</span></li>
				</ul>
			</div>
			<div class="col-5">
				<span class="ft-title">Nhập email để theo dõi chúng tôi</span>
				<div class="ft-content">
					<input class="default-text-form" type="text" placeholder="Nhập email vào đây"> 
					<button class="default-button">Follow</button>
				</div>
			</div>
		</div>
		<div id="UptoTop" class="go-top my-tooltip" title="Trở về đầu trang" rel="tooltip"><span class="glyphicon glyphicon-circle-arrow-up"></span></div>
		<div class="copyright">
			<span class="ft-text">Copyright <span class="glyphicon glyphicon-copyright-mark"></span> 2013-2014. All right reserved by VTH2</span>
		</div>
	</div>

</body>
</html>
