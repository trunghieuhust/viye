<%= div_for comment do %>
        <p>
                <strong>
                        Posted <%= time_ago_in_words(comment.created_at) %> ago by 
                         <%=link_to comment.user.name, comment.user.name %>
                </strong>
                <br/>
                <%= comment.body %>
                <%if comment.user == current_user%><br>
                <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
        		<%end%>
        </p>
<% end %>
