      <div id="MY-CONTENT">
        <div class="left-content">
          <div class="my-window">
            <div class="my-header">Hãy nhập thông tin cá nhân vào đây</div>
            <div class="my-content">
              <div class="span6">
                <div class="wrap-form">
                  <div id="legend">
                    <legend class="form-title">Thông tin cá nhân</legend>
                  </div>
                  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class=>"form-horizontal my-form", :html => { :method => :put }) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">display name</label>
                    <div class="col-sm-8">
                      <%= f.text_field :name, :autofocus => true, :class=>"form-control", :id=>"Username" %></div>
                    </div>

                    <div class="form-group">
                      <label for="inputEmail3" class="col-sm-4 control-label">Email</label>
                      <div class="col-sm-8">
                        <%= f.email_field :email, :class=>"form-control", :id=>"email" %></div>
                      </div>

                      <div class="form-group">
                        <label for="inputEmail3" class="col-sm-4 control-label">Password</label>
                        <div class="col-sm-8">
                          <%= f.password_field :password, :class=>"form-control", :id=>"Username" %></div>
                        </div>

                        <div class="form-group">
                          <label for="inputEmail3" class="col-sm-4 control-label">Password confirm</label>
                          <div class="col-sm-8">
                            <%= f.password_field :password_confirmation, :class=>"form-control", :id=>"Username" %></div>
                          </div>

                          <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">current password<span class="my-flag">*</span></label>
                            <div class="col-sm-8">
                              <%= f.password_field :current_password, :class=>"form-control", :id=>"Username" %></div>
                            </div>

                            <div class="form-group form-inline">
                              <label for="inputEmail3" class="col-sm-4 control-label">Sex</label>
                              <div class="col-sm-4">
                                <div class="radio my-radio">
                                  <%= f.label :sex, 'Male', :value => 'Male' %>
                                  <%= f.radio_button :sex, '1' %> 

                                </div>
                                <div class="radio my-radio">
                                  <%= f.label :sex, 'Female', :value => 'Female'%>

                                  <%= f.radio_button :sex, '2' %>
                                </div>
                              </div>
                            </div>


                   <div class="form-group form-inline">
                      <label for="inputEmail3" class="col-sm-4 control-label">Birth Day</label>
                      <div class="col-sm-8">
                        <%= f.text_field :dob, :class=>"form-control", :id=>"BirthDay" %></div>
                      </div>


                            <div class="form-group form-inline">
                              <%= f.submit "Update", :class=>"submit-button" %>
                            </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="right-content">
                    <div class="my-window">
                      <div class="my-header">Quảng cáo - 1</div>
                      <div class="my-content">khong co gi</div>
                    </div>
                    <div class="my-window">
                      <div class="my-header">Quảng cáo - 2</div>
                      <div class="my-content">khong co gi</div>
                    </div>
                    <div id="TAG-CLOUD" class="my-window">
                      <div class="my-header">Quảng cáo - 3</div>
                      <div class="my-content">khong co gi</div>
                    </div>
                  </div>
                </div>
